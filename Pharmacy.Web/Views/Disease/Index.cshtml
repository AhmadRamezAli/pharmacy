@model List<Pharmacy.Domain.Entities.Disease>
@{
	Layout = "~/Views/Shared/_LayoutSecond.cshtml";
}
<h1>Disease</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Id</th>
			<th scope="col">Name</th>


		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{

			<tr>
				<th scope="row">@(i + 1)</th>
				<td>@Model[i].Id</td>
				<td>@Model[i].Name</td>
		
				<td>
					<a asp-controller="Disease" asp-action="Delete" asp-route-id="@Model[i].Id" class="sampah">
						<span></span>
						<i></i>
					</a>

				</td>
				<td>

					<a class="Btn" asp-controller="Disease" asp-action="Edit" asp-route-id="@Model[i].Id">
						Edit
						<svg class="svg" viewBox="0 0 512 512">
						</svg>
					</a>


				</td>
			</tr>
		}
	</tbody>
</table>
<div class="justify-content-center d-flex">
	<a type="button" style="width:125px!important" class="Btn btn-secondary .btn-lg" asp-controller="Disease" asp-action="Create">Add Disease</a>
</div>