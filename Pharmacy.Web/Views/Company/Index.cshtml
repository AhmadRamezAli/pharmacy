@model List<Pharmacy.Domain.Entities.Company>

<h1>Company</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Id</th>
			<th scope="col">Name</th>

		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{

			<tr>
				<th scope="row">@(i + 1)</th>
				<td>@Model[i].Id</td>
				<td>@Model[i].Name</td>
				<td>
					<a  asp-controller="Company" asp-action="Delete" asp-route-id="@Model[i].Id" class="sampah">
							<span></span>
							<i></i>
						</a>

				</td>
				<td>

					<a class="Btn" asp-controller="Company" asp-action="Edit" asp-route-id="@Model[i].Id">
						Edit
						<svg class="svg" viewBox="0 0 512 512">
						</svg>
					</a>


				</td>
			</tr>
		}
	</tbody>
</table>